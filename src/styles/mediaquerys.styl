@media screen and (max-width: 780px)
  body
    font-size: 14px
  .resume
    grid-template-columns: 100%
    grid-template-rows: repeat(7, 1fr)
    grid-template-areas: "header" "profile" "experience" "academic" "skills" "interests" "languages"
  .Header
    grid-template-columns: 30% 70%
  .Skills
    padding: 5px
    grid-template-columns: repeat(4, 1fr)
    grid-template-rows: repeat(4, 25%) 
    h2 
      grid-column: 1 / span 1
  .Experience
    padding: 5px
    display: flex
    flex-direction: column
    h2
      grid-column: 1 / 2
  .Experience-item
    margin-bottom: 10px
  .Languages, 
  .Interests,
  .Academic,
  .Profile
    padding: 5px