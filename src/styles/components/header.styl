.Header
	grid-area header
	margin-bottom 50px
	padding 20px 10px 1px
	background-image linear-gradient(20deg, #08A5D0, #B4ACB6)
	background-image linear-gradient(21deg, #454EED, #C57873)
	background-image linear-gradient(-133deg, #352824, #48C3F1)
	background-image linear-gradient(149deg, #2C1F73, #52B564)

	&__image
		width 150px
		height 150px
		margin 0 auto
		border 1px solid white
		border-radius 100px
		overflow hidden
		box-shadow 0 0 20px rgba(0, 0, 0, .2)

		& img
			width 100%

	@media screen and (min-width 600px)
		display flex
		flex-wrap nowrap

		&__image
			margin 0 20px 0 0
