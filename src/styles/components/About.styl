@import 'Var.styl';

.About
    color #154360
    background-color rgba(255,255,255,0.6)
    margin-left 15px
    border-radius 10px
    padding 5px 30px
    width 100%
    &-title
        font-size 1.8em
        font-weight bold 
        font-family title_font   
    &-job-title 
        font-size  1.5em
        font-weight bold 
        font-family title_font
    &-contact 
        margin-top 1em;            
    &-item
        display inline-block
        margin-right 25px
    &-item__label
        font-weight bold
        font-family content_font
    &-item__data 
        font-family content_font   