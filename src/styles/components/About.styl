@import '../Vars'

.about
  	padding: 10px 12px
  	line-height: 24px
  	display: grid
		grid-template-columns: repeat(2, auto)
  	grid-template-rows: repeat(3, auto)
		h1
  	  grid-area: 1 / 1 / 2 / 4
		p
			margin: 0 10px
		a
			text-decoration: none
			margin: 0 10px
			color: $text-color-light

@media screen and (max-width: 768px )
	.about
		display: block
		grid-template-columns: repeat(1, auto)
		h1
			margin: 0