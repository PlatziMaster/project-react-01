@import "./vars.styl"

.About
  position absolute
  right 30px
  bottom 10px
  div
    display flex
    align-items center
    justify-content space-between
  &-title
    margin 0
    margin-bottom 5px
    color font-colorSecond
    font-size 20px
    text-align center
  &-item
    margin-left 15px
    a
      color font-colorSecond
      text-decoration none
      &:hover
        font-weight 700
        color font-colorThird
        cursor pointer