@import "../_variables"

.Interest
	grid-area interest
	margin 0 10px 50px
	background-color $almost-white
	color $blue
	border-radius 12px
	box-shadow 0 4px 4px alpha(#000, .25)

	& ul
		display flex
		flex-wrap wrap
		justify-content center
		margin 0
		padding 0
		list-style none

		& li
			margin 5px
			padding 5px 10px
			font-size 1.5rem
			background-color alpha($light-blue, .5)
			border-radius 20px
