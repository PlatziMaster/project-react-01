.Interest
  padding 1em

  .container
    width 50%

  &-title
    text-align center

  ul
    list-style-type none

  &-item
    display inline-block
    margin .25em
    padding .5em 1em
    border-radius 1em
    line-height 1.25em
    font-size 14px
    background-color #2a4365
    color white

    h3
      display block
      margin .25em 0 0
      font-weight lighter

    small
      display inline-block
      margin-bottom .5em
      font-weight bold