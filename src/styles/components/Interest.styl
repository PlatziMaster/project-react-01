@import "./vars.styl"

.Interest
  grid-area interest
  width calc(37.5vw - 45px)
  margin 0 15px 30px 30px
  &-title
    width: 20%;
    margin 15px auto
    padding-bottom: 5px;
    color font-colorSecond
    text-align center
    border-bottom: 3px solid rgb(186, 154, 109);
  &-content
    display flex
    justify-content space-around
    flex-wrap wrap
  &-item
    margin 10px
    font-size 18px
    color font-colorSecond