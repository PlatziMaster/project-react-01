@import 'Var.styl';

.Skills
    display inline-block
    margin-right 4px
    &-title
        font-size 1.8em
        font-family title_font
        margin-bottom 10px
        background-color THISTLE
        color #154360
        padding-left 10px
        border-radius 10px
    &-desc
        font-size 1.1em
        font-family content_font
        line-height 1.5em     
        padding-left 10px
    &-items
        display flex
        justify-content space-between   
        flex-wrap wrap
    &-item
        background-color LAVENDER
        margin-bottom 10px
        padding 10px 15px
        width 450px        
    &-item__name
        font-family title_font
        font-weight bold
        font-size 1.4em
        text-decoration underline   
        margin-bottom 7px
        color #154360
    
  