.Skills
  background-color white
  border 1px solid black
  border-radius 15px
  box-shadow 0 4px 8px 0 rgba(0,0,0,0.2)
  display column
  margin 10px
  padding 0 15px
  transition 0.3s

.Skills-title
  padding 0 10px

.Skills:hover
  box-shadow 0 8px 16px 0 rgba(0,0,0,0.2)

.Skills-list
  list-style square
  padding-left 30px

.Skills-list > *
  display list-item
  width 33%
  float left

.Skills-list:after
  content ''

