@import "./Vars.styl"

.Skills
    grid-area skills
    background secundary-color
    padding 20px
    margin-top 10px
    &-title
        color primary-color 
        margin-bottom 40px 
    &-container
        padding 20px
        background white
        border 2px solid #C7C7C7
        border-radius 10px
    &-item
        margin-bottom 26px 
.Skills-item_container
    width 100%
    border 2px solid primary-color
 
.HTML5
    color white
    width: 75%
    background-color primary-color
.CSS 
    color white
    width: 50%
    background-color primary-color /* Blue */
.JavaScript 
    color white
    width: 55%
    background-color primary-color /* Red */
.React 
    color white
    width: 40%
    background-color primary-color /* Dark Grey */
