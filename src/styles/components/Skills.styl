.Skills
  background-color white
  border 1px solid black
  border-radius 15px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.2)
  display column
  margin 10px
  padding 0 15px
  transition 0.3s

.Skills-title
  padding 0 10px

.Skillshover
  box-shadow 0 8px 16px 0 rgba(0, 0, 0, 0.2)

.Skills-list
  list-style square
  padding-left 30px

.Skills-list > *
  display list-item
  width 33%
  float left

.Skills-listafter
  content ''

.c100
  position relative
  font-size 18px
  width 1em
  height 1em
  -webkit-border-radius 50%
  -moz-border-radius 50%
  -ms-border-radius 50%
  -o-border-radius 50%
  border-radius 50%
  float left
  margin 0 0.1em 0.1em 0
  background-color #cccccc

.c100 *
.c100 * before
.c100 * after
  -webkit-box-sizing content-box
  -moz-box-sizing content-box
  box-sizing content-box

.c100 .p55 .bar
  -webkit-transform: rotate(198deg)
  -moz-transform: rotate(198deg)
  -ms-transform: rotate(198deg)
  -o-transform: rotate(198deg)
  transform: rotate(198deg)
  
.c100:hover 
  cursor: default

.c100:hover > span 
  width: 3.33em
  line-height: 3.33em
  font-size: 0.3em
  color: #307bbb

.c100:hover:after 
  top: 0.04em
  left: 0.04em
  width: 0.92em
  height: 0.92em


