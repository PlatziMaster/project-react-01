@import "../_variables"

.Profile
	grid-area profile
	max-width 950px
	margin 0 50px 50px
	padding 0 20px
	background-color $almost-white
	border-radius 12px
	box-shadow 0 4px 4px alpha(#000, .25)

	&-title
		color $blue

	&-desc
		color $color

	@media screen and (min-width 1050px)
		margin 0 auto 50px