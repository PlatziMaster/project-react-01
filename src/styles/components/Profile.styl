@import '../Vars'

.profile
  grid-area: 2 / 1 / 3 / 5
  background-color: $back-color-light
  color: $text-color-light
  height: $main-height
  display: flex-start
  justify-content: space-evenly
  align-items: center
  box-shadow: $shadow
  &-content
    margin: 15px

.dark-mode-profile
  @extend .profile
  background-color: $back-color-dark
  color: $text-color-dark