@import "./Vars.styl"

    .Header
        background radial-gradient(circle, primary-color 0%, black 800%) 
        display flex
        align-items: center
        &-texts
            margin-left 60px
            width 100%
            display flex
            flex-direction column
        &-title
            flex-grow 1
            color white
            margin 0
            text-transform: uppercase
        &-jobTitle
            flex-grow 1
            margin 0
            color white
        img 
            max-width 200px


