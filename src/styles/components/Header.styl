@import './Vars'

.header
  grid-area: 1 / 1 / 2 / 5
  display: flex
  justify-content: flex-start
  align-items: center
  color: $text-header-color
  box-shadow: $shadow
  background-color: $back-header-color
  padding: 52px 0px 52px 0px
  border-top: 6px solid #79d0ff

figure
  display: inline-block

img
  border-radius: 50em
  width: 80px
  height: 80px