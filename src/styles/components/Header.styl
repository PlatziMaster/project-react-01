.Header
  padding 3em 0 0
  height: 500px;
  text-align center
  color white
  background-image url('https://www.yoshuadiaz.com/static/51ef9d1d24f4138d667900b5d7483c2b/2f7e7/yoshbackground.jpg')
  background-size cover
  clear both
  position relative

  &-title
    font-size 0
  &-job-title
    font-weight lighter
    padding 1em
    @media screen and (max-width: 960px)
      font-size: 18px

  &-avatar
    background-image: url('https://d33wubrfki0l68.cloudfront.net/61b261384841202347222fd3dab8547f935865c5/19252/static/55b099cb1592b6f276881baa0985946a/647de/logo.png')
    background-size contain
    background-repeat no-repeat
    width 300px
    height 300px
    margin: 0 auto