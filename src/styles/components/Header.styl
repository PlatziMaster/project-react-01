.headerContainer
  width: 100%
  height 100%
  grid-area: header
  display:grid
  grid-template-columns: 20% 80%
  grid-template-rows: 50% 50%
  grid-template-areas: "avatar title" "avatar personaldata"
  align-items: center
  background-color: rgba(0,255,0,.1)
  &-avatar 
    grid-area: avatar
    height: 140px
    width: 140px
    justify-self: center
    img 
      height: 100%
      width: 100%
      object-fit: cover
      border-radius: 50%
.Header-title
  padding-bottom: 10px
  grid-area: title
  letter-spacing: -1px
  align-self:flex-end
