.Header
  background #212121
  color white
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.10)
  border-radius 8px 8px 8px 8px
  overflow hidden
  height 300px

.Header-container
  display flex
  flex-direction row
  justify-content space-around
  align-items center

.Header-name
  display flex
  flex-direction column
  justify-content center
  align-items center

.Header-avatar
  border-radius 50%
  margin-right 1rem
  width 150px
  height 150px

.Header-info
  display flex
  flex-direction column
  justify-content center
  align-items center
  padding 0.5rem 0