@import '../Vars'

.header
  grid-area: 1 / 1 / 2 / 5
  display: flex
  justify-content: flex-start
  align-items: center
  color: $text-color-light
  box-shadow: $shadow
  background-color: $back-color-light
  padding: 52px 0px 52px 0px
  border-top: 6px solid #79d0ff
  figure
    display: inline-block
  img
    border-radius: 50em
    width: 110px
    height:110px
    box-shadow: $shadow
  &-button--lights
      margin: 0 0 auto
      border: none;
      padding: 0.4em;
      cursor: pointer
      background-color: $back-color-dark
      color: $text-color-dark
      border-radius: 4px
  &-button--lang
      @extend .header-button--lights
      margin: 0 10px auto
      background-color: #c6ebff
      color: rgba(53,184,255, 1)

.dark-mode-header
  @extend .header
  background-color: $back-color-dark
  color: $text-color-dark
  a
    color: $text-color-dark