.Header
  display flex
  align-items center
  justify-content space-around
  width 95vw    
  height 15vh
  padding 15px 50px
  border-radius 30px
  margin 15px
  font-size .5rem
  .Header__image
    border 8px
    overflow hidden
    height 21vh
    width 24vh
    border-radius 100px
    img 
      width 24vh
      height 26vh

  .Header__container
    margin 20px
    .container__horizontal
      display flex
      justify-content: space-between
      h2
        margin-right 40px
