.Header 
  grid-area: header;
  display: grid;
  grid-template: 1fr/20% 80%;
  align-items: center;
  padding: 2em;
  grid-gap: 1em;
  background: url('/src/utils/hero.png');
  background-repeat: no-repeat;
  /* background-attachment: fixed; */
  background-size: cover;
  background-position-y: 56%;
  border: none;
  border-radius: 0 0 6% 6%;
  box-shadow: 0px 2px 4px #161616d6;
  &__photoContainer
      img
        width: 100%