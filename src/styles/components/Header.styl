.Header
    background-color #cceeff
    display flex
    padding 1em
    &-container 
        align-items column
        padding 1em
        color #3B3B3B
        font-size 20px
    &-picture
        padding 2em
    &-picture img
        width 170px
        margin auto
        border-radius 50%
        box-shadow 0 8px 8px 8px rgba(0,0,0,.2)
    &-title
        font-size 35px
        font-weight bold
    &-job-title
        margin 5px 0 5px 0
    &-container-data
         display flex
         align-items center
    &-phone
        margin 10px 40px 10px 0px
    &-email
        margin 10px 40px 10px 0px
    &-website
        margin 10px 10px 10px 0px
    &-address
        margin 5px 0 5px 0
    &-container-social
        margin 30px 0 0 0
        display flex
        justify-content space-between
    &-container-social a
        text-decoration: none;
        color black


        
    


 


