.Header
  background red
  display flex
  align-items: center
  padding 0 2em

.Header-img
  width 150px
  height 120px
  border-radius 50%
  overflow hidden
  margin: 1em
  // -webkit-shape-outside: circle() 
  // shape-outside: circle() margin-box

.Header-img img
  width 100%
  object-fit: cover

.Header-desc
  width: 100%
  margin-left: 3em

.Header-desc h1
  font-size 2em

.Header-desc p
  margin-bottom: .8em
  font-size 1.2em

.Header-desc span
  margin-right: 1em
  font-size 1.3em