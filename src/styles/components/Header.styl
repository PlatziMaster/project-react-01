.Header
    padding: 3rem 0rem
    background: linear-gradient(90deg, #1C2237, #4B5A8A)
    color: white
    .Header-container
        display: flex
        flex-wrap: wrap
        .Header-img
            width: 150px
            height: 150px
            margin: auto
            border-radius: 50%
            @media screen and (min-width: 600px)
                margin: initial 
        .Header-title
            width: 100%
            margin: 2rem 0
            text-align: center
            font-size: 2rem
            @media screen and (min-width: 600px)
                text-align: left
                margin: 0
                margin-bottom: 2rem
    .Header-info
        @media screen and (min-width: 600px)
            margin-left: 42px