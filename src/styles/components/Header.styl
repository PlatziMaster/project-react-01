.Header
  position: relative
  display: flex

  &-head
    display: flex
    align-items: center

  &-img
    width: 14rem;
    img
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 100%;

  &-details
    width: 100%;
    padding: 0 1rem

  .lang-btn
    border: none;
    margin-left: 1rem;
    font-size: 1rem;
    background: transparent;
    cursor: pointer;