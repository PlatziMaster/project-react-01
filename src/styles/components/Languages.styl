@import 'Var.styl';

.Languages
    display inline-block
    margin-right 4px
    &-title
        font-size 1.8em
        font-family title_font
        margin-bottom 10px
        background-color #76D7C4
        color #154360
        padding-left 10px
        border-radius 10px
    &-items
        margin-top 21px
        display flex
        justify-content space-around   
        flex-wrap wrap
    &-item
        background-color #D1F2EB
        margin-bottom 10px
        padding 10px 15px
        font-family content_font
        font-weight bold
        border-radius 15px
        border #76D7C4 1px solid
        
        
    