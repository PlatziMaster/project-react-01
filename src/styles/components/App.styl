fontSizeBase = 18px
fontSizeBaseMax-1 = 22px
fontSizeBaseLess-1 = 16px
fontSizeBaseLess-2 = 14px
fontColorFirst = #292929
fontColorSecond = #4307a5
fontFamilyFirst = 'Times New Roman', serif
fontFamilySecond = Helvetica, sans-serif
bgColorHeader = #e0f4ff
bgColorSection = #bdf1d4
boxShadowColor-1 = #3a9162

modeDisplayGrid(gridTplRows, gridTplColumns, rowGap, columnGap)
  display: grid
  grid-template-rows: gridTplRows
  grid-template-columns: gridTplColumns
  grid-row-gap: rowGap
  grid-column-gap: columnGap

modeCardBoxShadow()
  padding: 0.4em
  margin-bottom: 1.6em
  border-top-left-radius: 1em
  border-bottom-right-radius: 1em
  box-shadow: -0.24em 0.46em 0.6em 0.1em boxShadowColor-1

*
  box-sizing: border-box
  padding: 0
  margin: 0
  margin-block-start: 0
  margin-block-end: 0
  margin-inline-start: 0
  margin-inline-end: 0

body
  display: flex
  justify-content: center
  color: fontColorFirst
  font-size: fontSizeBase
  font-family: fontFamilyFirst
  > div
    width: 80%
    margin: 2em
    modeDisplayGrid(auto, 100%, 28px, 0px)

section
  min-height: 10em
  padding: 1em
  background-color: bgColorSection

article
  width: 86%
  > span
    display: inline-block
    margin-top: 0.4em
    font-style: italic
    font-size: 0.9em

h1
  color: fontColorSecond
  font-size: 2em
  margin-bottom: 0.2em

h1, h2
  font-family: fontFamilySecond

li
  list-style: none

a
  text-decoration: none



// ++++++++++++++++
// ++++++++++++++++
// HEADER
header
  background-color: bgColorHeader
  modeDisplayGrid(auto auto, 1fr 5fr, 14px, 4vw)
  padding: 1em 1em 1em 6vw
  align-items: center
  h1
    margin-bottom: 0
  img
    width: 100%
    max-width: 200px
    min-width: 88px
    grid-row: 1 / 3
    justify-self: center
    border-radius: 50%
  article
    grid-row: 2 / 3
    grid-column: 2 / 3
    display: flex
    flex-direction: column
    justify-content: center

.About-title
  width: fit-content
  border-bottom: 1px solid black
  margin-bottom: 0.2em

.About-item-container
  width: 80%
  display: flex
  justify-content: space-between
  flex-wrap: wrap

.About-item
  display inline-block
  padding: 0.4em 1.2em 0em 0em


// ++++++++++++++++
// MAIN
main
  modeDisplayGrid(auto auto, 100%, 21px, 0px)

.Experience-item
  modeCardBoxShadow()

// ++++++++++++++++
// ASIDE
aside
  modeDisplayGrid(auto auto, 1fr 1fr, 21px, 7px)
  section
    padding: 1.2em

.Academic-item
  modeCardBoxShadow()

.Interest-title + ul
  modeDisplayGrid(1fr, 1fr 1fr, 1.0em, 1.0em)

.Interest-item
    display: block
    font-size: 1.2em

.Skills-item, .Languages-item
  modeDisplayGrid(1fr, 3fr 1fr, 1.0em, 1.0em)
  padding-bottom: 0.7em
  p
    display: flex
    span
      display: inline-block
      width: 100%
    :first-child
      font-weight: bold
      text-align: right
    :last-child
      border-bottom: 1px dashed black


// --------------
// --------------
// MEDIA QUERIES
// --------------
@media  (min-width: 1367px)
  body
    font-size: fontSizeBaseMax-1


@media  (max-width: 768px)
  body
    font-size: fontSizeBaseLess-1

  article
    width: 96%

  .About-item-container
    width: 100%


@media  (max-width: 620px)
  body
    font-size: fontSizeBaseLess-2

  header
    img
      grid-row:1 / 2
      grid-column: 1 / 2
    article
      grid-row: 2 / 3
      grid-column: 1 / 3
  .About-title
      display: none

  aside
    modeDisplayGrid(auto, 1fr, 14px, 0px)


@media  (max-width: 480px)
  header
    display: flex
    flex-direction: column
