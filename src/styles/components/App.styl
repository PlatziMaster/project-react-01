body
  background-color #DBD9D4
  font-family 'Ubuntu', sans-serif;
  font-weight 300

h1
  color #F24A4A
  font-size 2.5em
  margin 0.2em 0 0.2em 0
  font-family 'Source Code Pro', monospace;
  font-weight 600

h3
  margin 5px 0px

.containter
  background linear-gradient(to right, #353D40, #4A7B8C)
  color white
  box-shadow 11px 14px 16px -2px rgba(0,0,0,0.35)
  border-radius 15px
  padding 10px
  margin 20px

.Header
  display grid
  grid-template-columns: 12em 1fr

.Header-img img
  border-radius 50%
  height 9em
  padding 1em 0px 1em 20px

.Header__content
  display grid
  grid-template-rows repeat(2,1fr)

.Header-title
  display flex
  align-items flex-end

.About
  display: flex
  align-items center
  justify-content center
  height 1.5em
  margin-top -70px
  color white
  margin-left 145px
  margin-bottom 50px

.About-item
  padding 1.5em

.Profile, .Experience, .Academic, .Skills
  display grid
  grid-template-columns 195px 1fr

.Profile-title, .Experience-title, .Academic-title, .Skills-title, .Interest-title, .Languages-title
  display grid
  justify-content center
  align-items center

.Profile-desc
  display grid
  align-items center

.Experience
  display grid
  grid-template-columns 195px repeat(3, 1fr)
  text-align center
  justify-content: center

.cuatro
  display grid
  grid-template-columns repeat(2,1fr)