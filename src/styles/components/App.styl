*{
  box-sizing border-box
  margin 0
  font-family sans serif
}

.Container
  display grid
  grid-template-columns 1fr 1fr
  grid-template-rows repeat(5,1fr)

  grid-row-gap  10px
  grid-column-gap  5px
  padding 10px

section
  background-color #bdf1d4
  padding 10px 0 0  10px
  a
    display block
    color black 
    text-decoration none
    margin 10px 0 0 0

.Experience
  grid-column 1/-1

.About
  grid-column 1/-1
  background-color #e0f3fe
  display grid
  grid-template-columns 1fr 6fr
  padding 20px
  &__image img
    padding-right 20px
    border-radius 50%
  a
    color black
    text-decoration none
    padding 10px 0 0 10px
    display block

.Profile
  grid-column 1/-1