
*
  margin 0
body
  font-family: sans-serif
  height auto
  .App
    background: linear-gradient(180deg, #d0d0d2 0%, #fdfefe 100%);
    .AppContainer
      display: grid
      grid-template-rows: repeat(4, auto)
      grid-template-columns: 1fr 1fr
      grid-template-areas: 
                          'profile profile'\
                          'experience experience'\
                          'academic skills'\
                          'interest languages'
      box-shadow: 0px 2px 5px #4EA3BB
      width: 90%
      grid-gap: 1.3em;
      margin 1em auto 
      padding: 1em
      background: #fdfefe               
      border-radius: 1em
      .date
        font-size: .8em
        font-weight: bold
        color: #313131
        margin: 0
                             

    .boxContainer
      width 80%
      margin 0
  .logoImage
    width 4em
  .flexBetween
    display flex
    justify-content: space-between
    align-items: flex-end
  .titleLabel
    color: #2294bd;
    text-shadow: 1px 1px 1px #3131318c
    text-transform: uppercase;

    