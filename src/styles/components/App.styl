@import './styles.styl'
@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700|Open+Sans+Condensed:300,700&display=swap')
        
body 
  font-family $font-family
  font-size: .85rem
  @media $md
    font-size: 1rem

  font-weight 300
  margin 0
  padding 0
  top:0; 
  left:0;
  z-index:-1;
  &::after
    content ""
    background $background
    background-attachment fixed
    position fixed
    top 0 
    left 0
    height  100%
    width  100%
    z-index -1   

#app
  min-width: 448px
  display grid
  padding 1.5rem 1rem
  grid-gap 1.5rem
  grid-template-columns 1fr 
  grid-template-areas "Header" "Profile" "Experience" "Academic" "Skills" "Interest" "Languages"

  for $area in Header Profile Experience Academic Skills Interest Languages
    .{$area} 
      grid-area $area
  
  @media $md
    padding 2rem 2rem
    grid-gap 2rem
    grid-template-columns 1fr 1fr
    grid-template-areas "Header Header" "Profile Profile" "Experience Experience" "Academic Skills" "Interest Languages"

  @media $lg
    padding 2rem 3rem

  .Header 
  .Profile 
  .Experience 
  .Academic 
  .Skills 
  .Interest 
  .Languages 
    mix-card()
    padding-left 1.5rem
    padding-right 1.5rem

    @media $md
      padding-left 2rem
      padding-right 2rem 
    
    @media $lg
      padding-left 3rem
      padding-right 3rem 


div[class$="title "]
  font-family $font-family-title
  font-weight 900
  text-transform uppercase
  font-size 1.5rem
  color $color-4
  margin-bottom 1rem

div[class$="item "]
  margin-bottom .25rem

  span 
    font-weight bold 
    font-size .75rem

    @media $md
      font-size .9rem
    
    @media $lg
      display block

@keyframes glow {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.loading-item 
  width 100%
  height 1.5rem
  background $background-loading 
  color transparent
  display flex
  align-items center
  line-height 1rem
  padding-left 16px

  animation glow 1.5s ease-in-out infinite
  cursor progress
  display inline-block

  &::after
    content: "Loading ..."

