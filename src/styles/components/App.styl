body
  background-color white
  display flex
  flex-direction colum
  max-width 1280px
  margin 0 auto
  
.Header-container
  display flex

.Header-container__img
  padding 10px

.Header-container__img img
  width 150px
  height 150px
  object-fit cover
  border-radius 50%

.Header-container__info
  padding 10px

.Header-title
  font-size 36px
  color #3B4358
  font-family Arial
  font-weight bold
  text-transform uppercase

.Header-job-title
  font-size 20px
  color #3B4358
  font-family Arial
  text-transform uppercase
  padding 8px 0px

.Header-container__contact
  display flex
  padding 8px 0px
  font-size 18pxx
  color #3B4358
  font-family Arial

.Header-container__contact div
  padding-right 16px