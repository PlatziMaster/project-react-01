body
  background-color white
  margin: 2em
  width 800px
  margin: 0 auto

h1, h2, h3, h4 {
  margin: 0
}

a 
  text-decoration none

p
  margin: 0
  padding: 0

.Header-content
  display flex
  padding: 1.5em
  background-color #E0F4FF
  border-radius 10px
  margin-bottom 5px

.Header-content .content-detail
  display flex
  justify-content center

.Header-content .content-detail .deatail-right
  margin-left 20px

.Header-content .content-detail .deatail-left
  margin-left 20px

.Header-content .Header-title
  margin 0

.Header-content .detail-item
  margin: 0

.Header .content-about
  display flex
  align-items: center
  flex-direction column

.Header-content .content-img 
  width 200px
  height  200px

.Header .deatail-left ul 
  list-style none
  font-size: 18px
  margin: 0
  padding 0

.Header .deatail-left ul li
  margin-bottom 10px

.About
  display: flex
  flex-direction: column


.About ul
  list-style none
  font-size: 18px
  padding 0
  margin: 0

.About ul li
  margin-bottom 10px

.Profile
  display: flex
  flex-direction: column
  background-color #BDF1D4
  padding: 1.5em
  border-radius 10px
  margin-bottom 5px

.Experience
  display: flex
  flex-direction: column
  background-color #BDF1D4
  padding: 1.5em
  border-radius 10px
  margin-bottom 5px

.Experience .experience-detail  
  display: flex
  margin: 1em
  flex-direction: column

.Experience .Experience-content
  margin-top: 10px

.Main-container
  display: grid
  grid-template-columns: repeat(2, 1fr);
  gap 5px
  margin-bottom: 5px

.Academic
  background-color #BDF1D4;
  padding 1em
  border-radius 10px

.Skills 
  background-color #BDF1D4;
  padding 1em
  border-radius 10px
  
.Skills .Skills-detail
  margin: 0
  font-size: 18px

.Skills .Skills-detail li
  margin-top: 10px;

.Interest 
  background-color #BDF1D4;
  padding 1em
  border-radius 10px
  
.Interest .Interest-detail
  margin: 0

.Interest .Interest-detail li
  margin-top: 10px;

.Languages 
  background-color #BDF1D4;
  padding 1em
  border-radius 10px
  
.Languages .Languages-detail
  margin: 0
  list-style none
  padding: 0

.Languages .Languages-detail li
  margin-top: 10px;

.Social
  padding 1em
  display: flex
  justify-content: space-between
  background-color #E0F4FF
  font-size: 24px
