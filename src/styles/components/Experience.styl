.Experience
  background-color white
  border 1px solid #307bbb
  border-radius 15px
  box-shadow 0 4px 8px 0 rgba(0,0,0,0.2)
  margin 10px
  padding 10px
  transition 0.3s

.Experience:hover
  box-shadow 0 8px 16px 0 rgba(0,0,0,0.2)

.Experience-title
  padding 0 10px
  color #307bbb

.Experience-item
  display column

.Experience__container
  display grid
  grid-template-columns 50% 50%
  grid-template-rows 1

.Experience-item
  padding 15px
