@import './vars.styl'

.Experience
  back-ground()
  grid-area: Experience
  
  @media screen and (min-width: 320px) and (max-width: 850px)
    text-align: center

.Experience-title
    font-size: 30px
    font-weight: 500
    margin: 5px 0

.Experiences
  display: grid
  grid-template-columns: repeat(3, 1fr)
  .Experience-item
    padding: 10px
    .item
        margin: 5px 0


@media screen and (min-width: 320px) and (max-width: 850px)
  .Experience-title
    font-size: 30px
    font-weight: 500
    margin: 5px 0

  .Experiences
    grid-template-columns: 1fr
      

  