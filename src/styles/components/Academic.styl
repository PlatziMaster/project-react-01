@import '../vars.styl'

.Academic
  back-ground()
  grid-area: Academic
  @media screen and (min-width: 320px) and (max-width: 850px)
    text-align: center

.Academic-title
    font-size: 30px
    font-weight: 500
    margin: 5px 0

.Academics
  display: grid
  grid-template-columns: repeat(2, 1fr)
  .Academic-item
    padding: 10px
    .item
        margin: 5px 0


@media screen and (min-width: 320px) and (max-width: 850px)
  .Academic-title
    font-size: 30px
    font-weight: 500
    margin: 5px 0

  .Academics
    grid-template-columns: 1fr
