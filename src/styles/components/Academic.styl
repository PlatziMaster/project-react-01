@import '../Vars.styl'

.Academic
    width 45%
    grid-area: header
    align-items center
    margin-top 10px
    border 1px solid  

.Academic-title
    margin 0

.Academic-items-container
    display flex
    flex-direction column 
    justify-content space-around
    flex-wrap nowrap
    padding-left 2%

.Academic-item
    border 1px solid
    margin 5px
    padding 10px
    *
        margin 0