@import "./vars.styl"

.Academic
  grid-area academic
  width calc(37.5vw - 45px)
  margin 0 15px 30px 30px
  &-title
    width: 27%;
    margin 15px auto
    padding-bottom: 5px;
    text-align center
    color font-colorSecond
    border-bottom: 3px solid rgb(186, 154, 109);
  &-content
    display flex
    flex-wrap wrap
  &-item
    width 45%
    margin 10px 2.5%
    background-color color-bgSecond
    box-shadow shadow
    h3
      margin 10px
      color font-colorSecond
    p
      margin 5px 10px 10px
    span
      display block
      margin 5px 0 10px 10px